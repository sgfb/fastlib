<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--圆角视图-->
    <declare-styleable name="RoundImageView">
        <attr name="border" format="boolean"/>
        <attr name="shadow" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="type" format="integer"/>
        <attr name="round_x" format="integer"/>
        <attr name="round_y" format="integer"/>
    </declare-styleable>

    <attr name="circularImageViewStyle">
        <flag name="border" value="0"/>
        <flag name="shadow" value="0"/>
        <flag name="border_width" value="0"/>
        <flag name="border_color" value="0"/>
    </attr>
</resources>